{
  "manifest_version": 3,
  "name": "Telegram Message Printer",
  "version": "1.0",
  "description": "A Chrome extension to print Telegram messages",
  "background":{
    "service_worker": "./src/content.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "identity",
    "audio"
  ],
  "host_permissions": [
    "https://hackharvard.vercel.app/"
  ],
  "webRequest": {
    "optional": true
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
        "16": "./16.png",
        "48": "./48.png",
        "128": "./128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/*"],
      "js": ["./src/content.js"]
    }
  ],
  "icons": {
    "16": "./16.png",
    "48": "./48.png",
    "128": "./128.png"
  }

}